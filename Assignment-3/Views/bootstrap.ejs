    <style>
        body {
            font-family: Poppins;
            margin: 0;
            padding: 0;
            background-color: #f4f4f4;
            font-size: 14px;
            line-height: 1.75;
            font-weight: 400;
        }

        #logo {
            background-color: white;
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

        header {
            background-color: rgb(9, 9, 153);
            color: black;
            padding: 10px 0;
            text-align: center;
        }

        nav ul {
            list-style: none;
            padding: 5px;
        }

        nav ul li {
            display: inline-block;
            text-align: center;
            margin: 0 5px;
            margin-right: 50px;
        }

        nav ul li a {
            color: #fff;
            text-decoration: none;
            font-size: 14px;
        }

        #menu ul li a {
            color: black;
        }

        #search-cart {
            float: right;
            margin-top: 0px;
        }

        #search-cart a {
            margin-left: 10px;
            color: black;
        }

        .product-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
            gap: 10px; /* Adjusted gap */
            padding: 0px;
            margin: 0; /* Remove margins */
        }

        .product-card {
            background: #fff;
            border: none;
            border-radius: 5px;
            padding: 15px;
            text-align: center;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            transition: transform 0.2s ease-in-out;
            position: relative; /* needed for positioning */
        }

        .product-card:hover {
            transform: scale(1.05);
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        }

        .product-card img {
            max-width: 100%;
            height: auto;
            transition: transform 0.2s ease-in-out;
        }

        .product-card:hover img {
            transform: scale(1.1);
        }

        .product-card button {
            background-color: transparent;
            border: none;
            padding: 0;
            cursor: default;
            width: fit-content;
        }

        .product-card .color-box {
            width: 20px;
            height: 20px;
            background-color: #FF69B4;
            border-radius: 2px;
            border: 1px solid #333;
        }

        .title {
            font-size: 14px;
            color: #222222;
            font-weight: 500;
        }

        .price {
            color: red;
        }

        button {
            background-color: #28a745;
            color: white;
            border: none;
            padding: 10px;
            border-radius: 5px;
            cursor: pointer;
        }

        button:hover {
            background-color: #218838;
        }

        footer {
            text-align: center;
            padding: 10px;
            background-color: rgb(9, 9, 153);
            color: #fff;
            position: relative;
            bottom: 0;
            width: 100%;
        }

        #logo {
            position: sticky;
            z-index: 100;
            width: 100%;
            top: 0;
            background-color: white;
            padding: 10px;
            border: 1px solid white;
        }

        main {
            padding-left: 0; /* Remove left padding */
            padding-right: 0; /* Remove right padding */
        }
    </style>
