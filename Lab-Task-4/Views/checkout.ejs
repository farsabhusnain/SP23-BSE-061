<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Checkout</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" />
    <style>
        /* Background Image with Overlay */
        body {
            margin: 0;
            font-family: Arial, sans-serif;
            height: 100vh;
            background: url('https://cdn.vectorstock.com/i/1000x1000/61/87/pair-of-shoes-on-color-background-vector-21036187.webp') no-repeat center center fixed;
            background-size: cover;
            display: flex;
            align-items: center;
            justify-content: center;
            position: relative;
        }

        body::before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.5);
            z-index: 0;
        }

        /* Checkout Form Container */
        .checkout-container {
            background: rgb(101, 183, 216);
            border-radius: 15px;
            padding: 30px 40px;
            max-width: 500px;
            width: 100%;
            position: relative;
            z-index: 1;
            color: #fff;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
        }

        .checkout-container h2 {
            text-align: center;
            margin-bottom: 20px;
            font-size: 2.5rem;
            color: #fff;
        }

        .form-label {
            font-size: 1rem;
            color: #fff;
        }

        .form-control {
            background-color: #f8f9fa;
            border: none;
            padding: 12px;
            font-size: 1rem;
            border-radius: 5px;
        }

        .btn-submit {
            background-color: #28a745;
            color: white;
            border: none;
            padding: 10px 0;
            font-size: 1.2rem;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        .btn-submit:hover {
            background-color: #218838;
        }

        .total-bill {
            font-size: 1.5rem;
            margin-top: 20px;
            color: #fff;
            text-align: center;
        }

        @media (max-width: 768px) {
            .checkout-container {
                padding: 20px;
            }
        }
    </style>
</head>

<body>
    <div class="checkout-container">
        <h2>Checkout</h2>

        <!-- Checkout Form -->
        <form id="checkout-form" action="/place-order" method="POST">
            <!-- Name Field -->
            <div class="mb-3">
                <label for="name" class="form-label">Full Name</label>
                <input type="text" class="form-control" id="name" name="name" placeholder="John Doe" required>
            </div>

            <!-- Email Field -->
            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input type="email" class="form-control" id="email" name="email" placeholder="john@example.com" required>
            </div>

            <!-- Phone Number Field -->
            <div class="mb-3">
                <label for="phone" class="form-label">Phone Number</label>
                <input type="text" class="form-control" id="phone" name="phone" placeholder="+1 234 567 890" required>
            </div>

            <!-- Address Field -->
            <div class="mb-3">
                <label for="address" class="form-label">Address</label>
                <input type="text" class="form-control" id="address" name="address" placeholder="123 Street Name" required>
            </div>

            <!-- City Field -->
            <div class="mb-3">
                <label for="city" class="form-label">City</label>
                <input type="text" class="form-control" id="city" name="city" placeholder="New York" required>
            </div>

            <!-- Zip Code Field -->
            <div class="mb-3">
                <label for="zip" class="form-label">Zip Code</label>
                <input type="text" class="form-control" id="zip" name="zip" placeholder="12345" required>
            </div>

            <!-- Total Bill Section -->
            <div class="total-bill">
                <p style="color: green;">Total Bill: $<span id="total-bill-amount">0.00</span></p>
            </div>

            <!-- Submit Button -->
            <button type="submit" class="btn btn-submit w-100">Place Order</button>
        </form>
    </div>

    <script>
        // Sample cart data - Replace this with dynamic cart data (e.g., from localStorage, session, or an API)
        const cartItems = [
            { name: "Item 1", price: 25.00 },
            { name: "Item 2", price: 15.50 },
            { name: "Item 3", price: 40.00 }
        ];

        // Function to calculate the total
        function calculateTotal(cart) {
            return cart.reduce((total, item) => total + item.price, 0).toFixed(2);
        }

        // Display the total bill in the checkout page
        const totalAmount = calculateTotal(cartItems);
        document.getElementById('total-bill-amount').textContent = totalAmount;
    </script>
</body>

</html>
